/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  "appId": "com.musicyou.app",
  "asar": true,
  "copyright": 'Copyright © gumengyu 2023', //版权信息
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist"
  ],
  "mac": {
    "artifactName": "${productName}-${os}-${version}-${arch}.${ext}",
    "target": [
      {
        "target":"dmg",
//        "arch": ["x64", "arm64", "universal"] // arm 需要在m1 及以上的设备上打包。
        "arch": ["x64"]
      }
    ],
    "darkModeSupport": true,
    "category": "public.app-category.music"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "publisherName": 'MusicYou',
  },
  "linux": {
    "target": [
      "AppImage",
      "deb",
      "rpm",
      "tar.gz"
    ],
    "category": "Audio;Music"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "publish": {
    "provider": "generic",
    "channel": "latest",
    "url": "https://github.com/electron-vite/electron-vite-react/releases/download/v2.1.0/"
  }
}
